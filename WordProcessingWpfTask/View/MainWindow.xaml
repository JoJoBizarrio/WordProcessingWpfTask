<Window x:Class="WordProcessingWpfTask.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordProcessingWpfTask.View"
        xmlns:vm="clr-namespace:WordProcessingWpfTask.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel >
        <Menu VerticalAlignment="Center" Height="18" DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Command="{Binding OpenAsync}"/>
                <Separator/>
                <MenuItem Header="Save" Command="{Binding SaveAsync}"/>
                <MenuItem Header="Quit" Command="{Binding Quit}"/>
            </MenuItem>

        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Background="#FFDADADA" Margin="5,5,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding CurrentText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="16"/>
            </Grid>
            <Grid Background="#FFF6BFBF" Grid.Row="1" Margin="5,5,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="142*"/>
                    <ColumnDefinition Width="133*"/>
                    <ColumnDefinition Width="515*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="LettersCountTextBox" ToolTip="Count of letters" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" MinWidth="100" Height="21" Width="100" Text="{Binding LettersCount, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
                <Button x:Name="RemoveButton" Command="{Binding RemoveWordsAsync}" CommandParameter="{Binding ElementName=LettersCountTextBox, Path=Text}" Grid.Column="1" Content="Remove words" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="100" MinHeight="21" Height="21" Width="100"/>
                <Button x:Name="RemoveSeparators" Command="{Binding RemoveSeparatorsAsync}" Grid.Column="2" Content=" Remove marks" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="100" MinHeight="21" Height="21" Width="100"/>

                <!--<CheckBox x:Name="IsNeedRemoveSeparatorsCheckBox" IsChecked="{Binding IsNeedRemoveSeparators, Mode=OneWayToSource}" Content="Remove separators?" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
                <!--<Button x:Name="MultiBind" >
                    <MultiBinding>
                        <Binding ElementName="LetterCountTextBox" Path="Text"/>
                        <Binding ElementName="IsNeedRemoveSeparatorsCheckBox" Path="IsChecked"/>
                    </MultiBinding>
                </Button>-->
            </Grid>

        </Grid>
    </DockPanel>

</Window>
